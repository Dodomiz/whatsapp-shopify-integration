{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "System.Net.Http.HttpClient": "Warning",
      "WhatsAppIntegration.BackgroundService": "Debug"
    }
  },
  "SyncService": {
    "IntervalHours": 1,
    "LookbackHours": 24,
    "ApiBaseUrl": "http://localhost:5015",
    "ApiEndpoint": "/api/shopify/orders/by-customer/categorized",
    "MaxOrdersLimit": 100,
    "MinOrdersPerCustomer": 1,
    "OrderStatus": "any",
    "RunOnStartup": true,
    "HttpTimeoutSeconds": 120
  }
}
